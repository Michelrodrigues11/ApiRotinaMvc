@model ApiRotinaMvc.Models.TreinoViewModel
@{
    ViewBag.Title = "Novo Treino";
}
<h2>Criar um Novo Treino</h2>
@if (@TempData["Mensagem"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Mensagem"]</div>
}
<!--Configuração para exibir mensagem de erro -->
@if (@TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["MensagemErro"]</div>
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr/>
        <div class="form-group">
            <label class="control-label col-md-2">Exercicios:</label>
            <div class="col-md-6">
                 @Html.EditorFor(model => model.Exercicios, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group"></div>
            <label class="control-label col-md-2">Classe Treino:</label>
            <div class="col-md-6">
                 @Html.DropDownListFor(model => model.TreinoClass, Html.GetEnumSelectList(typeof(ApiRotinaMvc.Models.Enuns.TreinoEnum)),
                    "---Selecione---", new { @class = "form-control" })
            </div>
        </div>
        <br>
        <div class="form-group">
             <div class="col-md-offset-2 col-md-6" >
                <input type="submit" value="Salvar" class="btn btn-primary"/>
             </div>
        </div>
}
<div>
    @Html.ActionLink("Retornar", "Index")
</div>