<!--Namespace da classe de Modelo para esta view-->
@model IEnumerable<ApiRotinaMvc.Models.TreinoViewModel>
<!--Inclua os TempData para Sucesso e Erro aqui, conforme exemplo na view de Autenticação-->
@{
    ViewBag.Title = "Treinos";
}<!--Título da página para o navegador-->
<h2>Relação de Treinos</h2>
@if (@TempData["Mensagem"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Mensagem"]</div>
}
<!--Configuração para exibir mensagem de erro -->
@if (@TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["MensagemErro"]</div>
}
<!--Título da página-->
<p>
  <!--Links apontando para views na mesma pasta-->
    @Html.ActionLink("Criar Novo Treino", "CadastrarTreino")
</p>
<table class="table">
    <tr>
      <!--Títulos das colunas da tabela-->
      <th>@Html.DisplayNameFor(model => model.IdTreino)</th>
      <th>@Html.DisplayNameFor(model => model.Exercicios)</th>
      <th>@Html.DisplayNameFor(model => model.TreinoClass)</th>
    </tr>
    <!--Looping para escrever os dados na tabela-->
    @foreach (var item in Model)
    {
      <tr>
        <td>@Html.DisplayFor(modelItem => item.IdTreino)</td>
        <td>@Html.DisplayFor(modelItem => item.Exercicios)</td>
        <td>@Html.DisplayFor(modelItem => item.TreinoClass)</td>
        <td>
          <!--Coluna para Links/botões-->
          @Html.ActionLink("Editar", "Editar", new { id = item.IdTreino } ) |
          @Html.ActionLink("Detalhes", "Detalhes", new { id = item.IdTreino }) |
            @Html.ActionLink("Deletar", "Delete", new { id = item.IdTreino }, new {onclick = "return confirm('Deseja realmente deletar esta Dieta ?');"}) 
       </td>
      </tr>
    }
</table>
    
